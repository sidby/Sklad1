@model SidBy.Sklad.Web.Models.LocalPasswordModel
@using SidBy.Sklad.Web.Resources.Views.Account

@{
    ViewBag.Title = ManageStrings.ViewBagTitle;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

<p>@Html.Raw(String.Format(ManageStrings.YouLoggedInAs, User.Identity.Name))</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

<section id="externalLogins">
    @Html.Action("RemoveExternalLogins")

    <h3>@ManageStrings.AddExternalLogin</h3>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
