@using SidBy.Sklad.Web.Resources.Views.Shared

@if (Request.IsAuthenticated) {
    <text>
        @_LoginPartialStrings.Hello, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = _LoginPartialStrings.Manage })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">@_LoginPartialStrings.LogOff</a>
        }
    </text>
} else {
    <ul>
        <li>@Html.ActionLink(_LoginPartialStrings.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(_LoginPartialStrings.LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
